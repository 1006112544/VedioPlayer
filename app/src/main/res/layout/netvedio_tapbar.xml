<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="#ffffff"
    android:layout_gravity="bottom">
    <LinearLayout
        android:id="@+id/netvedio_tapbar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        >
        <ImageButton
            android:id="@+id/netvedio_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:src="@drawable/net_back_selector"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            />
        <ImageButton
            android:id="@+id/netvedio_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:src="@drawable/net_next_selector"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>
        <ImageButton
            android:id="@+id/netvedio_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:src="@drawable/home_selector"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            />
    </LinearLayout>
</FrameLayout>