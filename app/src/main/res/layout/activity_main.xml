<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/splash_bg"
    tools:context="com.daobao.asus.vedioplayer.activity.MainActivity">
    <!--标题栏-->
    <include layout="@layout/titlebar"/>
    <!--FrameLayout-->
    <FrameLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
    </FrameLayout>
    <!--Tab-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:background="#4682B4">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/main_vedio_togglebutton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/togglebutton_shape"
                android:layout_weight="1"
              />
            <ImageView
                android:id="@+id/main_music_togglebutton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/togglebutton_shape"
                android:layout_weight="1"
             />
            <ImageView
                android:id="@+id/main_netvedio_togglebutton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/togglebutton_shape"
                android:layout_weight="1"
             />
            <ImageView
                android:id="@+id/main_net_togglebutton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/togglebutton_shape"
                android:layout_weight="1"
                />
        </LinearLayout>
        <RadioGroup
            android:id="@+id/rg_tap"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            >
            <RadioButton
                android:id="@+id/main_vedio"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本地视频"
                android:textSize="10sp"
                android:textColor="@drawable/rb_color_selector"
                android:drawableTop="@drawable/vedio_selector"
                android:drawablePadding="3dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:layout_weight="1"
                android:button="@null"
                />
            <RadioButton
                android:id="@+id/main_music"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本地音乐"
                android:textSize="10sp"
                android:drawablePadding="3dp"
                android:textColor="@drawable/rb_color_selector"
                android:drawableTop="@drawable/music_selector"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:layout_weight="1"
                android:button="@null"
                />
            <RadioButton
                android:id="@+id/main_netvedio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="网络视频"
                android:textSize="10sp"
                android:drawablePadding="3dp"
                android:textColor="@drawable/rb_color_selector"
                android:drawableTop="@drawable/netvedio_selector"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:button="@null"
                />
            <RadioButton
                android:id="@+id/main_net"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="娱乐"
                android:textSize="10sp"
                android:drawablePadding="3dp"
                android:layout_marginTop="2dp"
                android:textColor="@drawable/rb_color_selector"
                android:drawableTop="@drawable/net_selector"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:button="@null"
                />
        </RadioGroup>
    </LinearLayout>
</LinearLayout>